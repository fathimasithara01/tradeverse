# 
# Application Configuration
APP_ROLE=admin            
APP_PORT=8080

# ===========================
# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASS=password
DB_NAME=tradeverse
DB_SSLMODE=disable

# ===========================
# JWT / Authentication
# ===========================
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRY_HOURS=24

# ===========================
# Redis (Optional but recommended)
# ===========================
REDIS_HOST=localhost:6379
REDIS_PASSWORD=

# ===========================
# Market API Keys
# ===========================
MARKET_API_KEY=your_market_api_key_here

# ===========================
# Admin / Pricing Settings
# ===========================
DEFAULT_COMMISSION_PERCENT=10
MIN_SUBSCRIPTION_AMOUNT=100

# ===========================
# File Uploads / KYC
# ===========================
UPLOAD_DIR=./static/uploads
MAX_UPLOAD_SIZE_MB=5

# ===========================
# Cron Jobs
# ===========================
CRON_PRICE_FETCH_INTERVAL=@every 1m
CRON_SUBSCRIPTION_CHECK_INTERVAL=@every 5m
